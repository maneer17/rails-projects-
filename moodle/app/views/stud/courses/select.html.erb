<p style="color: green"><%= notice %></p>

<% content_for :title,"new Courses to enroll" %>
<h1 style="margin-left: 15px" > new Courses:</h1>
<br>
<div id="courses">
  <div class="container" >
    <div class="row row-cols-1 row-cols-md-3 g-3">
      <% @courses.each do |course| %>
        <div class="col">
          <div class="card" style="height: 100%; margin-left: 20px; border-bottom-color: black">
            <%= render course %>
            <%= button_to "enroll in this course", enroll_stud_courses_path(course_id: course.id), url_for: enroll_stud_courses_path, method: :post, class:"btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
