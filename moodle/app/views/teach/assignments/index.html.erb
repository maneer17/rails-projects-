<p style="color: green"><%= notice %></p>

<% content_for :title, "Assignments" %>

<h1>Assignments for <%= @course.name %></h1>

<div id="assignments">
  <table class="table " >
    <thead>
    <tr >
      <th scope="col">Assignment</th>
      <th scope="col">Deadline</th>
    </tr>
    </thead>
    <tbody>
  <% @assignments.each do |assignment| %>
      <tr>
        <td><%= link_to assignment.title, teach_course_assignment_path(@course,assignment)%></td>
        <td><%= assignment.deadline.strftime("%B %d, %Y %I:%M %p")  %></td>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>

<%= button_to "New assignment", new_teach_course_assignment_path, method: :get, class:"btn btn-success"%>

